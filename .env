# Pupero environment (dev/prod)
# Database
DB_ROOT_PASSWORD=change_this_password
DB_NAME=pupero_auth

# RabbitMQ
RABBITMQ_USER=pupero
RABBITMQ_PASSWORD=pupero
RABBITMQ_QUEUE=monero.transactions

# Monero daemon (default testnet)
MONEROD_ARGS=--testnet
MONEROD_P2P_PORT=28080
MONEROD_RPC_PORT=28081

# Wallet RPC
WALLET_RPC_PORT=18083
MONERO_RPC_USER=pup
MONERO_RPC_PASSWORD=pup
MONERO_RPC_AUTH_SCHEME=digest

# Wallet Manager
RABBITMQ_POLL_INTERVAL_SECONDS=1800

# Sweeper (on-chain to DB sync)
SWEEP_INTERVAL_SECONDS=1800
MIN_SWEEP_XMR=0.0001

# Frontend cookies
REMEMBER_ME_DAYS=30
SECURE_COOKIES=false
SESSION_COOKIE_SAMESITE=Lax

# Matrix trade channel archiving
# Number of days after which completed trade chat rooms are archived (0 = disabled)
MATRIX_TRADE_CHANNEL_ARCHIVE_DAYS=7
